<div class="row">
    <div class="col s12 m10 l8 offset-m1 offset-l2">
        <div class="card card-survey">
            <div class="card-content">
                    {{#each questions }}
                    <div>{{ this }}</div>
                    <div class="input-field col s12">
                        <select class="browser-default" required>
                            <option value="" disabled selected>Choose your option</option>
                            <option value="1">1 - Never</option>
                            <option value="2">2 - Hardly Ever</option>
                            <option value="3">3 - Somtimes</option>
                            <option value="4">4 - Most of the time</option>
                            <option value="5">5 - Always</option>
                        </select>
                    </div>
                    {{/each}}
                <div class="card-action center-align">
                    <a class="waves-effect waves-light btn-large blue yellow-text find-btn" href="/survey">Submit</a>
                </div>
            </div>
        </div>
    </div>
</div>